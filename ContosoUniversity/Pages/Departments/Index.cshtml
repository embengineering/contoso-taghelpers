@page
@using ContosoUniversity.Infrastructure
@using ContosoUniversity.Models
@model Pages.Departments.Index

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@(ModelExtensions.GetPropertyDisplayName<Department>(nameof(Department.Name)))</th>
            <th>@(ModelExtensions.GetPropertyDisplayName<Department>(nameof(Department.Budget)))</th>
            <th>@(ModelExtensions.GetPropertyDisplayName<Department>(nameof(Department.StartDate)))</th>
            <th>@(ModelExtensions.GetPropertyDisplayName<Department>(nameof(Department.Administrator)))</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model.Data)
        {
            <tr>
                <td value-for="Data[i].Name"></td>
                <td value-for="Data[i].Budget"></td>
                <td value-for="Data[i].StartDate"></td>
                <td value-for="Data[i].AdministratorFullName"></td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>