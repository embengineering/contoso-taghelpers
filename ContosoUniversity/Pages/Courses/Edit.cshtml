@page "{id:int}"
@model Courses.Edit

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <input asp-for="Data.Id" type="hidden"/>

            <div class="form-group">
                <label-tag for="Data.Id" />
                <div><display-tag for="Data.Id" /></div>
            </div>
            
            <form-block asp-for="Data.Title" />
            <form-block asp-for="Data.Credits" />
            <form-block asp-for="Data.Department" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
