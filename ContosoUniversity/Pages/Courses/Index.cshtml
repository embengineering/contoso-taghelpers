@page
@using ContosoUniversity.Infrastructure
@using ContosoUniversity.Models
@model Courses.Index

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @(ModelExtensions.GetPropertyDisplayName<Course>(nameof(Course.Id)))
            </th>
            <th>
                @(ModelExtensions.GetPropertyDisplayName<Course>(nameof(Course.Title)))
            </th>
            <th>
                @(ModelExtensions.GetPropertyDisplayName<Course>(nameof(Course.Credits)))
            </th>
            <th>
                @(ModelExtensions.GetPropertyDisplayName<Course>(nameof(Course.Department)))
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model.Data.Courses)
        {
            <tr>
                <td value-for="Data.Courses[i].Id"></td>
                <td value-for="Data.Courses[i].Title"></td>
                <td value-for="Data.Courses[i].Credits"></td>
                <td value-for="Data.Courses[i].DepartmentName"></td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>