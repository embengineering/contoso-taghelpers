@page "{id:int}"
@model Students.Delete

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt name-for="Data.LastName"></dt>
        <dd value-for="Data.LastName"></dd>
        <dt name-for="Data.FirstMidName"></dt>
        <dd value-for="Data.FirstMidName"></dd>
        <dt name-for="Data.EnrollmentDate"></dt>
        <dd value-for="Data.EnrollmentDate"></dd>
    </dl>
    
    <form method="post">
        <input-tag for="Data.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index">Back to List</a>
    </form>
</div>
