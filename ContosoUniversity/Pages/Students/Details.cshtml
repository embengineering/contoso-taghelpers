@page "{id:int}"
@using ContosoUniversity.Infrastructure.Extensions
@using ContosoUniversity.Models
@model Students.Details

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt name-for="Data.LastName"></dt>
        <dd value-for="Data.LastName"></dd>
        <dt name-for="Data.FirstMidName"></dt>
        <dd value-for="Data.FirstMidName"></dd>
        <dt name-for="Data.EnrollmentDate"></dt>
        <dd value-for="Data.EnrollmentDate"></dd>
        <dd>
            <table class="table">
                <tr>
                    <th>@(ModelExtensions.GetPropertyDisplayName<Enrollment>(nameof(Enrollment.Course)))</th>
                    <th>@(ModelExtensions.GetPropertyDisplayName<Enrollment>(nameof(Enrollment.Grade)))</th>
                </tr>
                @for (var i = 0; i < Model.Data.Enrollments.Count; i++)
                {
                    <tr>
                        <td value-for="Data.Enrollments[i].CourseTitle"></td>
                        <td value-for="Data.Enrollments[i].Grade"></td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Data.Id">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
